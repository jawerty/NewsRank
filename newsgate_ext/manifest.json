{
  "manifest_version": 2,
  "name": "newsgate",
  "description": "Catches untrustworthy news articles you click on and suggests similar/more credible articles",
  "version": "1.0",
  "browser_action": {
    // "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "*://*/"
  ],
  "content_scripts": [
      {
      "matches": [
          "http://*/*",
          "https://*/*"
          ],
      "js": ["content.js"],
      "run_at": "document_start"
      }
  ]
}